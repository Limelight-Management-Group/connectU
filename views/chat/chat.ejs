<body>
"Welcome to ConnectU"

<div class="container">
  <h3>Hey</h3><h3 id="userEmail"> <%- user %></h3>
</div>


<div id="message-container">
    <div class="container">
   <%# for(var chat of chatsArr) { %> 
      <%#= chat.chatBody %>
   <%# } %>
  </div>

  <div id="videoContainer" class="container">
    <div class="row">
      <div class="col-sm-6 col-md-6 col-lg-6 ">
        Remote
        <video id="rvideo" autoplay="autoplay"></video>
      </div>
      <div class="col-sm-6 col-md-6 col-lg-6">
        Local
        <video id="lvideo" autoplay="autoplay" muted playsinline></video>
      </div>
    </div>
    <span id="displayId"></span>
    <input type="text" class="form-control" id="connId" name="connId" placeholder="Add connectID">
    <button type="submit" id="connectButton" class="btn btn-success btn-block">Connect</button>
    <button type="submit" id="callButton" class="btn btn-danger btn-block">Call</button>

  </div>
  
</div>

  <div class="row" id="chatContainer">
    <% chatStorage.forEach(function(chat){ %>
      <p class="chatMessage col-sm-12 col-md-12 col-lg-12 container"><b><%=chat.email %></b> : <%= chat.chatBody %></p>
      <p><%= chat.date.getHours() % 12 %> : <%= chat.date.getMinutes() < 10 ? '0' + chat.date.getMinutes() : chat.date.getMinutes() %></p>
      <br>
    <% }) %>  
      <hr>
  </div>
  <form class="container" method="post" action="/user/:id" id="send-container">
  <div class="form-group">
    <label for="chatMessage">Message</label>
    <input type="text" class="form-control" id="message" name="chatBody" placeholder="Enter message...">
  </div>
  <div>
    <button type="submit" id="button" class="btn btn-primary btn-block">Submit</button>
  </div>
</form>
</div>

